{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "*.ts",
    "rules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*.ts",
    "vitest.config.ts"
  ]
} 